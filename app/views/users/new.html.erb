<!DOCTYPE html>
<html>
<head>
	<title>Bloggy: Register</title>
</head>
<body>
	<div id="regwrap">
		<a href="/"> << back </a>
		<h1>Register For Bloggy: Your own personal Blog Space</h1>
		<h4 style="color:red"> <%= flash[:alert] if flash[:alert] %> </h4>
		<%= form_for(@user) do |f| %>
			<div class="formpart">
				<%= f.label :first , 'First Name' %>
				<%= f.text_field :fname, required: true%>
				<%= f.label :last , 'Last Name' %>
				<%= f.text_field :lname %>
			</div>
			<div class="formpart">
				<%= f.label :email%>
				<%= f.email_field :email %>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>
			<div class="formpart">
				<%= f.label :loc, 'Location' %>
				<%= f.text_field :location %>
				<%= f.label :birth , 'Birthday' %>
				<%= f.date_field :birthday %>
			</div>
			<div class="formpart">
				<%= f.label :b , 'Bio' %>
				<%= f.text_area :bio, input_html: { class: "form-control", maxlength: "150", required: true }%>
			</div>
			<%= f.submit input_html: { id: "signin"} %>
		<% end %>
	</div>
</body>